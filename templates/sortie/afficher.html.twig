{% extends 'base.html.twig' %}

{% block link %}
    <link rel="stylesheet" href="{{asset('css/pageAfficherSortie.css')}}">
{% endblock %}

{% block title %}Afficher une sortie{% endblock %}
{% block body %}

 <div>
        <p>Nom de la sortie: {{sortie.nom}}</p>
        <p>Date de la sortie: {{sortie.dateHeureDebut|date('d/m/Y H:i')}}</p>
        <p>Date limite d'inscription: {{sortie.dateLimiteInscription|date('d/m/Y')}}</p>
        <p>Nombre de places: {{sortie.nbInscriptionMax}}</p>
        <p>Dur√©e: {{sortie.duree}} minutes</p>
        <p>Description et infos: {{sortie.infosSortie}}</p>
 </div>
<div>
        <p>Campus: {{sortie.campus}}</p>
        <p>Lieu: {{sortie.lieu.ville}}</p>
        <p>Rue: {{sortie.lieu.rue}}</p>
        <p>Code postal: {{sortie.lieu.ville.codePostal}}</p>
        <p>Latitude: {{sortie.lieu.latitude}}</p>
        <p>Longitude: {{sortie.lieu.longitude}}</p>
</div>

    <div>
        <h3>Liste des participants inscrits: </h3>
        <table>

            <thead>
            <tr>
                <td>Pseudo</td>
                <td>Nom</td>
            </tr>
            </thead>
            <tbody>
            {% for participant in sortie.participants %}
                <tr>
                    <td>{{participant.userIdentifier}}</td>
                    <td>{{participant.nom}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

