{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Affichage profil{% endblock %}

{% block body %}
    <div>
        <p>{{participant.photo}}</p>
    </div>

    <div>
        <h2>{{participant.userIdentifier}}</h2>
        <p>Prénom : {{participant.prenom}}</p>
        <p>Nom : {{participant.nom}}</p>
        <p>Téléphone : {{participant.telephone}}</p>
        <p>Email : {{participant.email}}</p>
        <p>Campus : {{participant.campus.nom}}</p>

        <a href="{{path('sortie_accueil')}}"><button type="button" name="afficherProfil" onclick="location.href='sortie/accueil.html.twig'">Retour</button></a>
    </div>


{% endblock %}
